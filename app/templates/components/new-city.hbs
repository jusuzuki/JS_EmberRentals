{{yield}}

{{#if addNewCity}}
     <h1>New City</h1>
      <div>
        <form>
          <div class="form-group">
          <label for="cityName">City Name</label>
          {{input value=cityName id="cityName"}}
        </div>
        <div class="form-group">
          <label for="country">Country</label>
          {{input value=country id="country"}}
        </div>
        <div class="form-group">
          <label for="attractions">Attractions</label>
          {{input value=attractions id="attractions"}}
        </div>
      <button {{action 'saveCity'}}>Save City</button>
    </form>
  </div>
 {{else}}
    <button {{action 'cityFormShow'}}>New City</button>
{{/if}}
